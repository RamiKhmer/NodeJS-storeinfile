<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <h1>Cart</h1>

    <% if(products.length > 0){ %>
    <ol>
        <% for(pro of products){ %>
        <li>
            <%= pro.productData.title %>
            <%= pro.productData.imageUrl %>
            <%= pro.productData.price %>
            <%= pro.productData.description %>
            <%= pro.qty %>
        </li>
        <form action="/delete-cart" method="POST">
            <input type="hidden" name="id" value="<%= pro.productData.id %>">
            <!-- <input type="hidden" name="price" value="<%= pro.productData.price %>"> -->
            <button class="btn" type="submit">Delete this Cart</button>
        </form>
        <hr>

        <%} %> 
    </ol>
    <h2>Total Price: $<%= totalPrice %></h2>
    <% }else { %>
    <h2>No Cart Found</h2>
    <% } %>


    <%- include('../includes/end.ejs') %>